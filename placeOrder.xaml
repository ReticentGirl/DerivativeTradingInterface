                        <GridViewColumn x:Name="typeOTGVCH" Header="合约类型 " DisplayMemberBinding="{Binding CallOrPut}" Width="60"/>
                        <GridViewColumn x:Name="nameTGVCH" Header="合约名称 " Width="80" />
                        <GridViewColumn x:Name="typeTGVCH" Header="合约类型 " Width="60"/>
                        <GridViewColumn x:Name="exercisePriceTGVCH" Header="行权价 " Width="60" DisplayMemberBinding="{Binding ExercisePrice}"/>
                        <GridViewColumn x:Name="typeOfTradeTGVCH" Header=" 交易类型" Width="60" />                            
                        <GridViewColumn x:Name="lotTGVCH" Header=" 交易手数" Width="60"/>
                        <GridViewColumn x:Name="formOfClientageTGVCH" Header=" 委托方式" Width=" 60"/>                           
                        <GridViewColumn x:Name="priceOfClientageTGVCH" Header=" 委托价格" Width=" 60"/>
                        <GridViewColumn x:Name="priceOfMarketTGVCH" Header=" 市场价格" Width=" 60"/>
                        <GridViewColumn x:Name="conditionTGVCH" Header=" 托单条件" Width=" 60"/>
                        <GridViewColumn x:Name="setGradientTGVCH" Header=" 设置梯度" Width=" 50"/>
                        <GridViewColumn x:Name="accuracyTGVCH" Header=" 精确度" Width=" 40"/>
                        <GridViewColumn x:Name="arithmeticProgressionTGVCH" Header="手数等差 " Width=" 50"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Canvas>

        <Button x:Name="cancleBtn" Content="取消" HorizontalAlignment="Right" Margin="0,0,21,4" VerticalAlignment="Bottom" Width="75" Style="{StaticResource darkButton}" Background="#FF2A3044" BorderBrush="{x:Null}" Foreground="White" Height="21" Click="placeOrderTBtn_Click" ToolTip="cancel"/>
        <Button x:Name="OKBtn" Content="确认" HorizontalAlignment="Right" Margin="0,0,110,4" VerticalAlignment="Bottom" Width="75" Style="{StaticResource darkButton}" Background="#FF2A3044" BorderBrush="{x:Null}" Foreground="White" Height="21" Click="placeOrderTBtn_Click"/>

    </Grid>

</Window>
